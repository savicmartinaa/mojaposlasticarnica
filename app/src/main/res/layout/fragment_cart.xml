<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactFragment"
    android:background="#FFF7DC">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Korpa"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/tiramisu"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:text="Tiramisu"
        android:textColor="@color/black"
        />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#FAE57A"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
    />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="211dp"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:text="+"
        android:textColor="@color/black"
        />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="230dp"
        />


    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#FAE57A"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="260dp"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="150dp"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="#FAE57A"
        android:text="Obriši proizvod"
        android:textSize="10dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="150dp"

        />






    <Button
        android:id="@+id/cartbutton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="#E8D159"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:text="Završi kupovinu"
        android:textColor="@color/black"
        android:textSize="13dp" />
</RelativeLayout>