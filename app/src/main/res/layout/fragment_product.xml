<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/naziv_proizvoda"
        android:layout_width="match_parent"
        android:textColor="#FFEBA5"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Naziv proizvoda"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/slika"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@+id/naziv_proizvoda"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slika"
        android:layout_centerInParent="true"
        android:text="opis proizvoda"
        android:textColor="#FFEBA5"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kolicina"
        android:layout_below="@+id/opis"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/plus_button"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="#E8D159"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/labela"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_toRightOf="@id/plus_button"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/minus_button"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#E8D159"
            android:gravity="center"
            android:layout_toRightOf="@id/labela"
            android:text="-"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/dodavanjeUKorpu"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Dodaj u korpu"
        android:textColor="@color/black"
        android:background="#E8D159"
        android:layout_below="@+id/kolicina"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/dodavanjeUKorpu">

    <TextView
        android:id="@+id/komentariDrugihKorisnika"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Komentari drugih korisnika"
        android:textColor="@color/black"
        android:background="#9A9A9A"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewKomentari"
        android:layout_width="150dp"
        tools:listitem="@layout/item_komentar"
        android:layout_height="wrap_content"
        android:layout_below="@+id/komentariDrugihKorisnika"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFF7DC"/>

    <EditText
        android:id="@+id/editTextKomentar"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text="Ostavite komentar"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="240dp"
        android:textColor="#9A9A9A"/>

    <Button
        android:id="@+id/buttonDodajKomentar"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editTextKomentar"
        android:layout_toRightOf="@+id/recyclerViewKomentari"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:background="#E8D159"
        android:text="Ostavite Komentar"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="10dp"/>
</RelativeLayout>

</RelativeLayout>
