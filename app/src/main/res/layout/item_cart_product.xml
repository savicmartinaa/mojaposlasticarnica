<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewSlika"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/naziv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/imageViewSlika"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Naziv"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:background="#E8D159"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_toRightOf="@id/naziv"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/labela"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_toRightOf="@id/plus_button"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/minus_button"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="#E8D159"
        android:gravity="center"
        android:layout_toRightOf="@id/labela"
        android:text="-"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cena"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_toRightOf="@id/minus_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:text="Cena"
        android:textSize="20dp"
        android:textColor="@color/black"
    />
    <TextView
        android:id="@+id/din"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:text="din"
        android:layout_toRightOf="@id/cena"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/brisanje"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#E8D159"
        android:gravity="center"
        android:layout_toRightOf="@id/din"
        android:text="ObriÅ¡i"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />




</RelativeLayout>